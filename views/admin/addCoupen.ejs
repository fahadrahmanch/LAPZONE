                  <h1>Add New Coupon</h1>
                  <a href="/admin/coupen" class="back-btn">Back to Coupons</a>
                </div>
                <form method="post" action="/admin/addCoupen" onsubmit="return validateForm()">
                    <div class="form-group">
                        <span class="text-danger"><%=message%></span>
                      <label for="coupon-name">Coupon Name</label>
                      <input type="text" id="coupon-name" name="name" placeholder="Only letters and numbers, no spaces or special characters" >
                      <span id="coupon-name-error" class="error-message" style="color: red; font-size: 14px;"></span>
                    </div>
                    <div class="form-group">
                      <label for="offer-price">Offer Price (₹)</label>
                      <input type="number" id="offer-price" name="price" placeholder="Enter the offer price"  >
                      <span id="offer-price-error" class="error-message" style="color: red; font-size: 14px;"></span>
                    </div>
                    <div class="form-group">
                      <label for="min-price">Minimum Purchase Amount (₹)</label>
                      <input type="number" id="min-price" name="Amount" placeholder="Enter the minimum amount"  >
                      <span id="min-price-error" class="error-message" style="color: red; font-size: 14px;"></span>
                    </div>
                    <div class="form-group">
                      <label for="expiry-date">Expiry Date</label>
                      <input type="date" id="expiry-date" name="date" keydown >
                      <span id="expiry-date-error" class="error-message" style="color: red; font-size: 14px;"></span>
                      <!-- <% if (message) { %>
                        <p style="color: red; font-size: 14px;"><%= message %></p>
                      <% } %> -->
                    </div>
                    <button type="submit" class="create-btn">Create Coupon</button>
                  </form>
                  
                 
