        <h1>Brand Management</h1>
        <div class="container">
            <div class="add-brand">
                <h2>Add New Brand</h2>
                <form id="brandForm" action="/admin/addBrand" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label>Brand Name</label>
                        <input type="text" placeholder="Enter brand name" name='name' required>
                    </div>
                    <div class="form-group">
                        <label>Brand Logo</label>
                        <div class="file-upload">
                            <button type="button" onclick="document.getElementById('fileInput').click()">Choose File</button>
                            <span id="fileName">No file chosen</span>
                            <input type="file" id="fileInput" hidden accept="image/*" name="image">
                        </div>
                    </div>
                    <button type="submit" class="add-brand-btn">ADD BRAND</button>
                </form>
            </div>
    
            <table class="brands-table">
                <thead>
                    <tr>
                        <th>Brand</th>
                        <th>Logo</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <%brand.forEach((item)=>{%>
                    <tr>
                        <td><%=item.brandName%></td>
                        <td><img src="<%=item.brandImage[0]%>" alt="Sony" class="brand-logo"></td>
                        <%if(item.isBlocked){%>
                        <td><span class="text-danger">InActive</span></td>
                        <%}else{%>
                            <td><span class="status">Active</span></td>
                            <%}%>
                        <td class="actions">
                            <%if(item.isBlocked){%>
                                <button class="btn btn-block btn-danger" style="background-color: #c82333;" onclick="block('<%=item._id%>')">UnBlock</button>
                                <%}else{%>
                                    <button class="btn btn-block " style="background-color: #00c853;" onclick="block('<%=item._id%>')">Block</button>
                                    <%}%>
                          
                            
                            <!-- <button class="btn btn-delete">Delete</button> -->
                        </td>
                    </tr>
                    <%})%>
                   
                </tbody>
            </table>
        </div>
