                            }
                            
                            .price-amount {
                                font-weight: 600;
                                color: #212529;
                            }
                            
                            .order-date {
                                color: #6c757d;
                                font-size: 0.9rem;
                            }
                            
                            .badge {
                                display: inline-block;
                                padding: 0.35em 0.65em;
                                font-size: 0.75em;
                                font-weight: 600;
                                line-height: 1;
                                text-align: center;
                                white-space: nowrap;
                                vertical-align: baseline;
                                border-radius: 50rem;
                            }
                            
                            .alert-success {
                                background-color: #d1e7dd;
                                color: #0f5132;
                            }
                            
                            .alert-danger {
                                background-color: #f8d7da;
