<html lang="en">
<head>
    <meta charset="utf-8">
    <title>LapZoen Dashboard</title>
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta property="og:title" content="">
    <meta property="og:type" content="">
    <meta property="og:url" content="">
    <meta property="og:image" content="">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="assets/imgs/theme/favicon.svg">
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body class="bg-gray-900 text-white font-roboto">
    <main class="min-h-screen flex items-center justify-center">
        <section class="bg-gray-800 p-8 rounded-lg shadow-lg w-full max-w-md">
            <h4 class="text-2xl font-bold mb-4">Sign in</h4>
            <form action="/admin/login" method="POST" id="adminloginForm" >
                <span class="text-red-500"><%=message%></span>
                <div class="mb-4">
                    <input class="w-full p-2 rounded bg-gray-700 text-white" id="email" placeholder="Username or email" type="text" name="email" oninput="validateEmail()">
                    <span id="email_error" class="text-red-500"></span>
                </div>
                <div class="mb-4">
                    <input class="w-full p-2 rounded bg-gray-700 text-white" id="password" placeholder="Password" type="password" name="password" oninput="validatePassword()">
                    <span id="password_error" class="text-red-500"></span>
                </div>
                <div class="mb-4 flex items-center">
                    <input type="checkbox" class="form-check-input mr-2" checked="">
                    <span class="form-check-label">Remember</span>
                </div>
                <div class="mb-4">
                    <button type="submit" class="w-full p-2 rounded bg-blue-600 hover:bg-blue-700">Login</button>
                </div>
            </form>
            <script>
            document.getElementById("adminloginForm").addEventListener("submit", function (event) {
                event.preventDefault(); 
                this.submit(); 
            });
        </script>
            <script src="/js_folder/validation.js"></script>
        </section>
    </main>
    <script src="assets/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="assets/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="assets/js/vendors/jquery.fullscreen.min.js"></script>
    <!-- Main Script -->
    <script src="assets/js/main.js" type="text/javascript"></script>
</body>
</html>